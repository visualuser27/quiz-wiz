        <section id="quizzes">
            <div class="quiz-container">
                <!-- Repeated quiz sections for each subject -->
                <div class="quiz">
                    <script>
                        // Select all quiz elements
                        const quizzes = document.querySelectorAll('.quiz');
                    
                        // Function to add the 'zoom-in' class when an element is in view
                        const observer = new IntersectionObserver((entries, observer) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    // Add 'zoom-in' class to trigger animation
                                    entry.target.classList.add('zoom-in');
                                    // Stop observing the element once the animation has triggered
                                    observer.unobserve(entry.target);
                                }
                            });
                        }, {
                            threshold: 0.5 // Trigger the animation when 50% of the element is in view
                        });
                    
                        // Observe each quiz element
                        quizzes.forEach(quiz => {
                            observer.observe(quiz);
                        });
                    </script>
                    
                    <img src="/IMAGES/python_quiz.png" alt="Python Quiz Icon" class="quiz-icon">
                    <h1>Basics of Python</h1>
                    <p>Short description about the subject and quiz.</p>
                    <a href="/Quiz/quizzes/python/rules_python.html" class="quiz-btn green">Attempt the Quiz</a>
                </div>
